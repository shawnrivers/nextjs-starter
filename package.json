{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "type-check": "tsc",
    "lint": "eslint --ext ts,tsx --ignore-path .gitignore src",
    "lint:fix": "eslint --ext ts,tsx --ignore-path .gitignore --fix src",
    "format": "prettier 'src/**/*.{ts,tsx}' --check",
    "format:fix": "prettier 'src/**/*.{ts,tsx}' --write",
    "test": "jest"
  },
  "dependencies": {
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "jest": "^27.0.3",
    "lint-staged": "^12.1.6",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "typescript": "^4.5.4"
  }
